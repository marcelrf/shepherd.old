<%- model_class = Metric -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @metric.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tags) %>:</strong></dt>
  <dd><%= @metric.tags %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_info) %>:</strong></dt>
  <dd><%= @metric.source_info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:polarity) %>:</strong></dt>
  <dd><%= @metric.polarity %></dd>
  <br />
  <dt><strong><%= model_class.human_attribute_name(:check_every_hour) %>:</strong></dt>
  <dd><%= @metric.check_every_hour %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hour_check_delay) %>:</strong></dt>
  <dd><%= @metric.check_every_hour ? @metric.hour_check_delay : 'None' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:check_every_day) %>:</strong></dt>
  <dd><%= @metric.check_every_day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:day_check_delay) %>:</strong></dt>
  <dd><%= @metric.check_every_day ? @metric.day_check_delay : 'None' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:check_every_week) %>:</strong></dt>
  <dd><%= @metric.check_every_week %></dd>
  <dt><strong><%= model_class.human_attribute_name(:week_check_delay) %>:</strong></dt>
  <dd><%= @metric.check_every_week ? @metric.week_check_delay : 'None' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:check_every_month) %>:</strong></dt>
  <dd><%= @metric.check_every_month %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_check_delay) %>:</strong></dt>
  <dd><%= @metric.check_every_month ? @metric.month_check_delay : 'None' %></dd>
  <br />
  <dt><strong><%= model_class.human_attribute_name(:last_hour_check) %>:</strong></dt>
  <dd><%= @metric.last_hour_check ? @metric.last_hour_check : 'None' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_day_check) %>:</strong></dt>
  <dd><%= @metric.last_day_check ? @metric.last_day_check : 'None' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_week_check) %>:</strong></dt>
  <dd><%= @metric.last_week_check ? @metric.last_week_check : 'None' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_month_check) %>:</strong></dt>
  <dd><%= @metric.last_month_check ? @metric.last_month_check : 'None' %></dd>
  <br />
  <dt><strong><%= model_class.human_attribute_name(:enabled) %>:</strong></dt>
  <dd><%= @metric.enabled ? 'Yes' : 'No' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_start) %>:</strong></dt>
  <dd><%= @metric.data_start %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              metrics_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_metric_path(@metric), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              metric_path(@metric),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
