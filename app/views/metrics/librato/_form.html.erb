<%= form_for @metric, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'span6' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tags, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags, :class => 'span6' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :source_info, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :source_info, :class => 'span6' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :polarity, :class => 'control-label' %>
    <div class="controls">
      <%= f.radio_button :polarity, 'positive' %> Positive
      <%= f.radio_button :polarity, 'negative' %> Negative
    </div>
  </div>
  <div class="control-group">
    <%= f.label :check_every_hour, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :check_every_hour %>
      <%= f.text_field :hour_check_delay %> Delay in minutes
    </div>
  </div>
  <div class="control-group">
    <%= f.label :check_every_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :check_every_day %>
      <%= f.text_field :day_check_delay %> Delay in minutes
    </div>
  </div>
  <div class="control-group">
    <%= f.label :check_every_week, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :check_every_week %>
      <%= f.text_field :week_check_delay %> Delay in minutes
    </div>
  </div>
  <div class="control-group">
    <%= f.label :check_every_month, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :check_every_month %>
      <%= f.text_field :month_check_delay %> Delay in minutes
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data_start, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :data_start %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :enabled, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :enabled %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                metrics_path, :class => 'btn' %>
  </div>
<% end %>
