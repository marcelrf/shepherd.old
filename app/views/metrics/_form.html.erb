<%= form_for @metric, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :source, :class => 'control-label' %>
    <!-- <div class="controls">
      <%= f.text_field :source, :class => 'span6' %>
    </div> -->
    <div class="controls">
      <%= select(:metric, :source_id, source_select_options(@metric)) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'span6' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :polarity, :class => 'control-label' %>
    <div class="controls">
      <%= f.radio_button :polarity, 'positive' %> Positive
      <%= f.radio_button :polarity, 'negative' %> Negative
    </div>
  </div>
  <div class="control-group">
    <%= f.label :kind, :class => 'control-label' %>
    <div class="controls">
      <%= f.radio_button :kind, 'counter' %> Counter
      <%= f.radio_button :kind, 'gauge' %> Gauge
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), metrics_path, :class => 'btn' %>
  </div>
<% end %>
