<%- model_class = Metric -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:source) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:polarity) %></th>
      <th><%= model_class.human_attribute_name(:kind) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.source.name %></td>
        <td><%= metric.name %></td>
        <td><%= metric.polarity %></td>
        <td><%= metric.kind %></td>
        <td>
          <div class="btn-group">
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_metric_path(metric), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        metric_path(metric),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_metric_path,
            :class => 'btn btn-primary' %>
